{
    "name": "Sledgehammer default registry",
    "description": "This is the default registry that is configured with Sledgehammer. It is installed as default and provides the most basic tools.",
    "maintainer": "Nils Plaschke <plaschke@adobe.com>",
    "kits": [
        {
            "name": "slh-dev",
            "description": "Provides tools to build and test Sledgehammer and the default registry",
            "tools": [
                {
                    "name": "shellcheck"
                },
                {
                    "name": "alpine-version"
                },
                {
                    "name": "modify-repository"
                },
                {
                    "name": "jq"
                }
            ]
        },
        {
            "name": "gce-sdk",
            "description": "The Google Cloud SDK CLI tool collection",
            "tools": [
                {
                    "name": "bq"
                },
                {
                    "name": "cbt"
                },
                {
                    "name": "datalab"
                },
                {
                    "name": "gcloud"
                },
                {
                    "name": "gsutil"
                },
                {
                    "name": "kubectl"
                }
            ]
        }
    ]
